@model IEnumerable<Lab3.Models.ToDoListModel>
@{
    ViewData["Title"] = "Список дел";
}

<div class="text-center">
    <h1 class="display-4">Список дел</h1>
    <form method="post">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Название</th>
                    <th scoep="col">Действия</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int i = 1;
                }
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@(i++)</th>
                        <td class="w-100">@item.Name</td>
                        <td nowrap>
                            <a class="btn btn-outline-success" asp-controller="ToDoListItem" asp-action="Index"
                            asp-route-id="@item.ListId">Открыть</a> |
                            <a class="btn btn-outline-primary" asp-controller="ToDoList" asp-action="Update"
                            asp-route-id="@item.ListId">Изменить</a> |
                            <input class="btn btn-danger" type="submit" value="X" asp-controller="ToDoList"
                            asp-action="Delete" asp-route-id="@item.ListId">
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </form>
    <a class="btn btn-outline-primary" asp-controller="ToDoList" asp-action="Create">Добавить новый список</a>
</div>
